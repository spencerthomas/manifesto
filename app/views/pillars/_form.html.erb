
<%= simple_form_for(@pillar) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :image %>
    <%= f.input :time %>
    <%= f.input :income %>
    <%= f.input :vision %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary btn-md" %>
  </div>
<% end %>
