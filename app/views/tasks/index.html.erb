<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Content</th>
			<th>Completed</th>
			<th>updated_at</th>
			<th>created_at</th>
			<th></th>
			<th></th>

		</tr>
	</thead>
	<tbody>
		<% @tasks.each do |task| %>
		<tr>
			<td><%= task.name %></td>
			<td><%= task.content %></td>
			<td><%= task.completed %></td>
			<td><%= task.updated_at %></td>
			<td><%= task.created_at %></td>
			<td><%= link_to "edit", edit_task_path(task), class: "btn btn-outline-primary" %></td>
			<td><%= link_to "destroy", task, method: :delete, data: { confirm:  "are you sure?" }, class: "btn btn-outline-danger" %></td>
		</tr>
	<% end %>
	</tbody>

</table>

<%= link_to "New Task", new_task_path, class: "btn btn-outline-primary btn-md" %>
